<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/create"
            android:layout_width="393dp"
            android:layout_height="852dp"
            android:clipToOutline="true"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/blueboard"
                android:layout_width="358dp"
                android:layout_height="62dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="18dp"
                android:gravity="center_horizontal|top"
                android:letterSpacing="0.03"
                android:text="BLUEBOARD"
                android:textColor="#0478FF"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reg_id"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="150dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="아이디"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/square_id"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="38dp"
                android:background="#D9D9D9"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/reg_pw"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="270dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="비밀번호"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/square_pw"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_marginTop="300dp"
                android:layout_marginLeft="38dp"
                android:background="#D9D9D9"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/reg_pwcheck"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="390dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="비밀번호 확인"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/square_pwcheck"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_marginTop="420dp"
                android:layout_marginLeft="38dp"
                android:background="#D9D9D9"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/reg_name"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="510dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="이름"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/square_name"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_marginTop="540dp"
                android:layout_marginLeft="38dp"
                android:background="#D9D9D9"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/reg_institute"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="630dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="교육기관"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/select_institute"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="662dp"
                android:background="#D9D9D9"
                android:entries="@array/ins_array"
                android:gravity="center"
                android:spinnerMode="dialog"

                />

            <TextView
                android:id="@+id/reg_dept"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="750dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="부서"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/select_dept"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_marginTop="780dp"
                android:layout_marginLeft="38dp"
                android:background="#D9D9D9"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:entries="@array/dept_array"
                android:spinnerMode="dialog"
                />

            <TextView
                android:id="@+id/reg_grade"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="870dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="학년"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/square_grade"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_marginTop="900dp"
                android:layout_marginLeft="38dp"
                android:background="#D9D9D9"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/reg_num"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="990dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="학번"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/square_num"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_marginTop="1020dp"
                android:layout_marginLeft="38dp"
                android:background="#D9D9D9"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/reg_isMg"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="1120dp"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:text="관리자 여부 (관리자: 1, 일반 사용자: 0)"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/select_isMg"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_marginTop="1150dp"
                android:layout_marginLeft="38dp"
                android:background="#D9D9D9"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:entries="@array/mg_array"
                android:spinnerMode="dialog"
                />

            <Button
                android:id="@+id/reg_complete"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="1252dp"
                android:layout_marginBottom="60dp"
                android:background="#0478FF"
                android:elevation="4dp"
                android:gravity="center"
                android:text="가입하기"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

            <Button
                android:id="@+id/backToLogin"
                android:layout_width="311dp"
                android:layout_height="56dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="1312dp"
                android:layout_marginBottom="60dp"
                android:background="#D9D9D9"
                android:elevation="4dp"
                android:gravity="center"
                android:text="돌아가기"
                android:textColor="#000000"
                android:textSize="18dp" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>